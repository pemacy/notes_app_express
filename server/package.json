{
  "name": "server",
  "version": "1.0.0",
  "description": "server to notes app: express with mongodb and written in typescript",
  "license": "ISC",
  "author": "Preston Macy",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "server:test": "export NODE_ENV=test && ts-node-dev src/server.ts",
    "server:dev": "export NODE_ENV=development && ts-node-dev src/server.ts",
    "dev": "npm run server:dev",
    "build": "tsc",
    "test": "vitest run",
    "test:inspect": "vitest run --no-file-parallelism --poolOptions.threads.singleThread --inspect",
    "test:watch": "vitest",
    "test:watch:inspect": "vitest --no-file-parallelism --poolOptions.threads.singleThread --inspect"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mongoose": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.13",
    "@types/supertest": "^6.0.3",
    "chalk": "^5.4.1",
    "dotenv": "^17.2.1",
    "supertest": "^7.1.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
